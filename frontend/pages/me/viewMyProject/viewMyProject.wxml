<view class="page">
  <view wx:for="{{records}}" class="project-card">
    <i-card title="{{item.project.title}}" bindtap="enterProject" id="{{item.project.id}}">
      <view slot="content">{{item.project.content}}</view>
      <view slot="footer">
        <div wx:if="{{type=='HISTORY'}}">
          <view>
            <i-icon size="16" type="time" />认证工时：{{item.work_time}} </view>
        </div>
      </view>
    </i-card>
  </view>
</view>