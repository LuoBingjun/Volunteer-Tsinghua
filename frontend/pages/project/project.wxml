<view class="page">
  <view wx:if="{{cover}}">
    <image src="{{cover}}" mode="widthFix" style="width:100%;height:auto;" />
  </view>

  <view class="container">
    <i-row>
      <i-panel title="项目名称">
        <view style="padding: 15px;">{{title}}</view>
      </i-panel>
    </i-row>
    <i-row>
      <i-panel title="简介" hide-border="{{ true }}">
        <view style="padding: 15px;">{{introduction}}</view>
      </i-panel>
    </i-row>
    <i-row>
      <i-panel title="详情" hide-border="{{ true }}">
        <view style="padding: 15px;">{{description}}</view>
      </i-panel>
    </i-row>

    <i-row>
      <i-panel title="要求" hide-border="{{ true }}">
        <view style="padding: 15px;">
          {{requirement}}
        </view>
      </i-panel>
    </i-row>
    <div wx:if="{{finished == false}}">
      <i-row wx:for="{{job_set}}" i-class="buttons">
        <i-panel title="{{item.job_name}}" hide-border="{{ true }}">
        </i-panel>
          <view wx:if="{{item.job_status=='W'}}">
            <button class="weui-btn" type="primary" disabled="true">正在审核</button>
            <button class="weui-btn" type="primary" bindtap="cancelApply">取消申请</button>
          </view>
          <view wx:elif="{{item.job_status=='P'}}">
            <button class="weui-btn" type="primary" bindtap="gotoCurrentProject">查看通过信息</button>
          </view>
          <view wx:elif="{{item.job_status=='N'}}">
            <button class="weui-btn" type="primary" disabled="true">审核未通过</button>
          </view>
          <view wx:elif="{{item.job_status=='A'}}">
            <view wx:if="{{beforedeadline}}">
              <button class="weui-btn" type="primary" bindtap="signin" data-jobindex="{{item.id}}">我要报名</button>
            </view>
            <view wx:else>
              <button class="weui-btn" type="primary" disabled="true">已过报名时间</button>
            </view>
          </view>
        
      </i-row>
    </div>
  </view>
</view>